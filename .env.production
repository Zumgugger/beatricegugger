# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in all values
# DO NOT commit .env to version control!

# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=production

# REQUIRED: Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# Database (SQLite - path relative to app root)
DATABASE_URL=sqlite:///beatricegugger.db

# ===========================================
# Email Configuration (SMTP)
# ===========================================
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@beatricegugger.ch
MAIL_SUPPRESS_SEND=False

# Admin Email (receives registration notifications)
ADMIN_EMAIL=beatrice@beatricegugger.ch

# ===========================================
# File Upload Settings
# ===========================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# Application Settings
ITEMS_PER_PAGE=10
